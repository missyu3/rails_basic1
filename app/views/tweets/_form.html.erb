<div class="input_form">
  <%= form_with(model: @tweet, local: true ,url: chooes_new_or_edit ) do |form| %>
    <% if @tweet.errors.any? %>
      <div id="error_explanation">
        <h2><%= @tweet.errors.count %>件のエラーがあります。</h2>   
        <ul>
          <% @tweet.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ulr>
      </div>
    <% end %>
    <div>
      <%= form.text_field :content ,value: @tweet.content %>
    </div>
    <%= form.submit %>
  <% end %>
  <%= link_to "ブログ一覧画面にもどる", tweets_path %>
</div>