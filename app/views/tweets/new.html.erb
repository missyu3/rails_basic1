<%= form_with(model: @tweets, local: true ,url: tweets_path ) do |form| %>
  <% if @tweets.errors.any? %>
    <div id="error_explanation">
      <h2><%= @tweets.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @tweets.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ulr>
    </div>
  <% end %>
  <div class="tweets_title">
    <%= form.text_field :content %>
  </div>
  <%= form.submit %>
<% end %>
<%= link_to "ブログ一覧画面にもどる", tweets_path %>